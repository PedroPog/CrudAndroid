<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_venda"
    android:orientation="vertical"
    android:background="@color/semfoco"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_msg_telefone"
        android:text="TESTE - TELEFONE"
        android:background="@color/yellow"
        style="@style/MsgTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"

            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_qtd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Styleinfos"
                    android:text="Quantidade Itens: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Styleinfos"
                    android:text="0,00"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_total_item"
                app:layout_constraintTop_toBottomOf="@+id/layout_qtd"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Styleinfos"
                    android:text="Total Itens: R$ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Styleinfos"
                    android:text="0,00"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_total_desconto"
                app:layout_constraintTop_toBottomOf="@+id/layout_total_item"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Styleinfos"
                    android:text="Total Desconto: R$ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Styleinfos"
                    android:text="0,00"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/layout_total_desconto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/BtnInformarCpf"
                android:text="Informar CPF/CNPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_comanda"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/BtnComada"
                android:text="COMANDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_valor_total"
                app:layout_constraintTop_toBottomOf="@+id/btn_comanda"
                app:layout_constraintStart_toStartOf="@+id/btn_comanda"
                app:layout_constraintEnd_toEndOf="@+id/btn_comanda"
                app:layout_constraintBottom_toTopOf="@+id/btn_finalizar_venda"
                android:text="R$ 1,00"
                style="@style/ValorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_finalizar_venda"
                app:layout_constraintTop_toBottomOf="@+id/txt_valor_total"
                app:layout_constraintStart_toStartOf="@+id/txt_valor_total"
                app:layout_constraintEnd_toEndOf="@+id/txt_valor_total"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/BtnConfirm"
                android:text="FINALIZAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>